{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="ui grid stackable padded">
        <div class="column">
            <div class="ui segment">
                <div id="content">

                    <div class="ui stackable grid">
                        <div class="twelve wide column">
                            <h1 class="ui header">
                                <div class="content">
                                    Add Social Links
                                </div>
                            </h1>
                        </div>
                    </div>
                    <div class="ui divider"></div>

                    {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
                    <div class="field">
                        {{ form_label(form.icon) }}

                        <div class="field">
                            {{ form_widget(form.icon, {'attr': {'placeholder': 'Icon Label'}}) }}
                        </div>
                        <div class="description" style="color: #ababab">
                            For reference, list of icons <a href="https://fontawesome.com/icons?d=gallery">https://fontawesome.com/icons?d=gallery</a>
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.url) }}
                        <div class="field">
                            {{ form_widget(form.url, {'attr': {'placeholder': 'Icon URL'}}) }}
                        </div>
                    </div>

                    <button class="ui main-color button">
                        Save
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
