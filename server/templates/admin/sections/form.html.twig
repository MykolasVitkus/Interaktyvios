{% extends 'admin/base.html.twig' %}

{% block body %}
    <div class="ui grid stackable padded">
        <div class="column">
            <div class="ui segment">
                <div id="content">

                    <div class="ui stackable grid">
                        <div class="twelve wide column">
                            <h1 class="ui header">
                                <div class="content">
                                    {% if currentPath == '/admin/sections/add'%}Add{% else %}Edit{% endif %} Section
                                </div>
                            </h1>
                        </div>
                    </div>
                    <div class="ui divider"></div>

                    {{ form_start(form, {'attr': {'class': 'ui form'}}) }}
                    <div class="field">
                        {{ form_label(form.title) }}

                        <div class="field">
                            {{ form_widget(form.title, {'attr': {'placeholder': 'Title'}}) }}
                        </div>
                    </div>

                    <div class="field">
                        {{ form_label(form.content) }}
                        <div class="field">
                            {{ form_widget(form.content, {'attr': {'placeholder': 'Content'}}) }}
                        </div>
                    </div>

                    <button class="ui main-color button">
                        Save
                    </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
